{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["dom", "es2020"],
    "module": "es2020",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "target": "es2017"
  },
  "include": ["src/**/*"]
}